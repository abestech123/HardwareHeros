python
import platform
import psutil
def detect_hardware():
    print("Hardware Detection Results:")
    print("---------------------------")
    print(f"CPU: {platform.processor()}")
    print(f"CPU Cores: {psutil.cpu\_count(logical=False)}")
    print(f"CPU Threads: {psutil.cpu\_count(logical=True)}")
    print(f"RAM: {round(psutil.virtual\_memory().total / (1024.0 \*\* 3), 2)} GB")
    print(f"Operating System: {platform.system()} {platform.release()}")
detect_hardware()
